<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@color/white1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top_back_navi" />

    <LinearLayout
        android:id="@+id/my_bank_card_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@color/wh">

            <ImageView
                android:id="@+id/my_bank_card_detail_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hybrid4_account_bank_icon_1" />

            <TextView
                android:id="@+id/my_bank_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/my_bank_detail_type_ml"
                android:layout_toRightOf="@id/my_bank_card_detail_type_icon"
                android:gravity="center"
                android:text="招商银行"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_bank_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="@dimen/my_bank_detail_type_ml"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:text="储蓄卡" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/wh">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="17sp"
                android:textColor="#666666"
                android:text="卡号"/>

            <TextView
                android:id="@+id/my_bank_card_detail_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginRight="@dimen/my_bank_detail_type_ml"
                android:layout_centerVertical="true" />

        </FrameLayout>

    </LinearLayout>


</LinearLayout>
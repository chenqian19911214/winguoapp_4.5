<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9">

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0092e5" >

        <RelativeLayout
            android:id="@+id/hybrid4_account_login_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:clickable="true" >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/my_open_station_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/hybrid4_account_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/login_title_st"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textColor="#b8b8b8"
        android:textSize="14sp"
        android:gravity="center"
        android:text="      请输入你的手机号码"
        android:visibility="gone"/>

    <LinearLayout android:id="@+id/hybrid4_account_login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:src="@drawable/winguo_account_account_icon" />

            <EditText android:id="@+id/hybrid4_account_login_user_et"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="手机/账号"
                android:background="@null"
                android:textSize="15sp"
                android:maxLines="1"
                android:singleLine="true"
                />

            <ImageView android:id="@+id/hybrid4_account_expandable_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="7dp"
                android:src="@drawable/winguo_account_help_icon"
                />
        </LinearLayout>

        <TextView android:id="@+id/hybrid4_account_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingBottom="5dp"
            android:textColor="#c0c0c0"
            android:visibility="gone"
            />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/hybrid4_settings_item_division"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
         <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:src="@drawable/winguo_account_password_icon" />

            <EditText android:id="@+id/hybrid4_account_login_pwd_et"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="密码"
                android:background="@null"
                android:textSize="15sp"
                android:singleLine="true"
                android:password="true"
                />

            <ImageView android:id="@+id/hybrid4_account_expandable_toggle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="7dp"
                android:src="@drawable/winguo_account_help_icon"
                />
        </LinearLayout>
        <TextView android:id="@+id/hybrid4_account_expandable2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingBottom="5dp"
            android:textColor="#c0c0c0"
            android:visibility="gone"
            />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="5dp"
        >
        <CheckBox android:id="@+id/hybrid4_account_login_showpwd_cb"
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:text="@string/hybrid4_account_display_pwd"
             android:textColor="#b8b8b8"
             android:button="@drawable/hybrid4_account_checkbox_drawable"
             android:textSize="12sp"
             />

        <TextView android:id="@+id/hybrid4_account_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hybrid4_account_free_registration"
            android:textColor="#b8b8b8"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/hybrid4_account_forgetpwd_tv"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />

        <!-- android:layout_toLeftOf="@+id/hybrid4_account_forgetpwd_tv" android:layout_marginRight="15dp"-->
        <TextView android:id="@+id/hybrid4_account_forgetpwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hybrid4_account_forget_password"
            android:layout_alignParentRight="true"
            android:textColor="#b8b8b8"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <Button android:id="@+id/hybrid4_account_login_button"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="@string/hybrid4_account_login"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/winguo_account_button_shape"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        />
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@color/wh"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog2_title_hight"
        android:gravity="center"
        android:paddingLeft="@dimen/dialog2_title_padding"
        android:paddingRight="@dimen/dialog2_title_padding"
        android:text="是否确定删除全部搜索历史"
        android:textColor="#000000"
        android:textSize="16sp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingBottom="20dp"
    >
        <Button
            android:id="@+id/nearby_search_negative_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/nearby_search_delete_bg"
            android:text="取消"
        />
        <View
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
        />
        <Button
            android:id="@+id/nearby_search_positive_btn"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#24A1FE"
            android:text="确定"
            android:textColor="@color/wh"
        />
    </LinearLayout>
</LinearLayout>
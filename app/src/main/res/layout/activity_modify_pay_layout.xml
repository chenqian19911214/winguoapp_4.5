    <LinearLayout
        android:id="@+id/winguo_pay_reset_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/winguo_pay_reset_container_mt1"

        android:orientation="vertical"
        android:paddingLeft="@dimen/winguo_pay_reset_container_pr"
        android:paddingRight="@dimen/winguo_pay_reset_container_pr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/winguo_app_acoount_reset_ly_h"
            android:layout_marginLeft="@dimen/winguo_app_acoount_reset_tip_ml"
            android:layout_marginTop="@dimen/winguo_app_acoount_reset_tip_h"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/winguo_pay_old_pwd_et"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/pwd2"
                android:drawablePadding="13dp"
                android:hint="@string/winguo_pay_old_pwd_et"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/winguo_account_old_pwd_et_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/error2"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/winguo_account_old_pwd_et_showpwd_cb2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/toggle_btn"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/winguo_app_acoount_reset_ly_h"
            android:layout_marginLeft="@dimen/winguo_app_acoount_reset_tip_ml"
            android:layout_marginTop="@dimen/winguo_app_acoount_reset_tip_h"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/winguo_account_reset_pwd_et"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/pwd2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_prompt_newpassword"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/winguo_account_reset_pwd_et_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/error2"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/winguo_account_reset_pwd_et_showpwd_cb2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/toggle_btn"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/winguo_app_acoount_reset_ly_h"
            android:layout_marginLeft="@dimen/winguo_app_acoount_reset_tip_ml"
            android:layout_marginTop="@dimen/winguo_app_acoount_reset_tip_h"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/winguo_account_reset_pwd_et1"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/pwd2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_prompt_newpassword1"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/winguo_reset_pwd_et1_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/error2"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/winguo_reset_pwd_et1_showpwd_cb2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/toggle_btn"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2" />

        <Button
            android:id="@+id/winguo_account_modify_pay_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/winguo_account_modify_pay_bt_h"
            android:layout_marginBottom="@dimen/winguo_account_modify_pay_bt_mt"
            android:layout_marginTop="@dimen/winguo_account_modify_pay_bt_mt"
            android:background="@drawable/pay_success_blue_solid_btn"
            android:text="@string/winguo_account_reset_pay_pwd"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>
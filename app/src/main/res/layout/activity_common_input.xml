<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/common_input_back"
            android:layout_width="@dimen/top_back_fl_w"
            android:layout_height="@dimen/top_back_fl_w"
            android:layout_marginLeft="@dimen/top_back_marginLeft">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/left_back_btn"/>
        </FrameLayout>

        <TextView
            android:id="@+id/common_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/title_text_color" />
        <TextView
            android:id="@+id/common_input_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/title_text_color"
            android:layout_marginRight="@dimen/common_input_submit"
            android:text="保存"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_parting_line"
            android:background="@color/white1"
            android:layout_gravity="bottom"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_input_ll_p">
        <EditText
            android:id="@+id/common_input_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_input_et"
            android:hint="请输入你的昵称"
            android:singleLine="true"
            android:maxLines="1"
            android:background="@null"
            style="@style/MyEditText"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white1"/>

    </LinearLayout>


</LinearLayout>
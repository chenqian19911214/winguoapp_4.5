<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/wh"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/creater_wallet_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/left_back_btn" />

        <TextView
            android:id="@+id/creater_recharge_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="创客充值"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/creater_recharge_result_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/recharge_iv_mt"
            android:src="@drawable/creater_pay_success" />

        <TextView
            android:id="@+id/creater_recharge_result_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/creater_recharge_result_ic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/creater_recharge_success_tip"
            android:text="充值失败"
            android:textSize="18sp"
            android:textColor="#333333"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/creater_recharge_success_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/creater_recharge_result_ic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/creater_recharge_success_tip">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/creater_recharge_tip"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/creater_recharge_tip_mt"
                android:text="@string/creater_recharge_tip2"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/creater_recharge_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_color"
        android:text="立即购物"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/recharge_btn_mt"
        android:layout_marginLeft="@dimen/recharge_btn_m"
        android:layout_marginRight="@dimen/recharge_btn_m"
        android:gravity="center"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/creater_recharge_btn_share"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/pay_success_blue_btn"
        android:layout_marginTop="@dimen/recharge_btn_wallet_mt"
        android:layout_marginLeft="@dimen/recharge_btn_m"
        android:layout_marginRight="@dimen/recharge_btn_m"
        android:text="分享好友"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/title_color"
        android:visibility="visible"/>

</LinearLayout>
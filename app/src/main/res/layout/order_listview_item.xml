<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/order_list_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
    >
        <ImageView
            android:id="@+id/temp_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shopicon"
        />
        <TextView
            android:id="@+id/order_shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/temp_iv"
            android:text="喵之小屋"
            android:textColor="#202020"
            android:textSize="14sp"
        />
        <TextView
            android:id="@+id/order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/order_wait_pay"
            android:textColor="#e23131"
            android:textSize="14sp"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
    >
        <LinearLayout
            android:id="@+id/order_goods_picture_ll"
            android:layout_width="@dimen/order_goods_picture_bg"
            android:layout_height="@dimen/order_goods_picture_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/listview_item_picture_background"
        >
            <ImageView
                android:id="@+id/order_goods_picture_iv"
                android:layout_width="@dimen/order_goods_picture"
                android:layout_height="@dimen/order_goods_picture"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/order_goods_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/order_goods_picture_ll"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="蓝宝晶1号净水机蓝宝晶1号净水机蓝宝晶1号净水机蓝宝晶1号净水机"
            android:textColor="#202020"
            android:textSize="12sp"
        />
        <LinearLayout
            android:id="@+id/order_goods_standard_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/order_goods_picture_ll"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/order_goods_standard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="尺寸:"
                android:textSize="12sp"
            />
            <TextView
                android:id="@+id/order_goods_standard2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="64G"
                android:textSize="12sp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/order_goods_color_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/order_goods_standard_ll"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/order_goods_picture_ll"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/order_goods_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="颜色:"
                android:textSize="12sp"
            />
            <TextView
                android:id="@+id/order_goods_color2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="黑色"
                android:textSize="12sp"
            />
        </LinearLayout>
        <ImageView
            android:id="@+id/order_list_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/order_list_more"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/order_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 299"
                android:textColor="#000000"
                android:textSize="11sp"
            />
            <TextView
                android:id="@+id/order_goods_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:text="x  1"
                android:textColor="#B4B4B4"
                android:textSize="11sp"
            />
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
    >
        <TextView
            android:id="@+id/order_all_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/order_goods_count"
            android:textColor="#000000"
            android:textSize="9sp"
        />
        <RelativeLayout
            android:id="@+id/tmpe_rl"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_all_count_tv"
        >
            <TextView
                android:id="@+id/order_all_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="¥ 299"
                android:textColor="#e40026"
                android:textSize="13sp"
            />
            <!--<TextView
                android:id="@+id/order_all_price_dot_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/order_all_price_tv"
                android:text=".00"
                android:textColor="#e40026"
                android:textSize="10sp"
            />-->
        </RelativeLayout>
        <TextView
            android:id="@+id/order_delivery_charges_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tmpe_rl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@id/tmpe_rl"
            android:text="@string/order_delivery_charges"
            android:textColor="#000000"
            android:textSize="8sp"
        />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
    >
        <Button
            android:id="@+id/order_right_btn"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/pay_success_blue_solid_btn"
            android:text="@string/order_pay"
            android:textColor="#ffffff"
            android:textSize="13sp"
        />
        <Button
            android:id="@+id/order_left_btn"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/order_right_btn"
            android:background="@drawable/pay_success_blue_solid_btn"
            android:text="@string/order_comment"
            android:textColor="#ffffff"
            android:textSize="13sp"
        />

    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/search_top_back_marginLeft"
        android:layout_marginRight="@dimen/search_top_back_marginLeft"
        android:src="@drawable/winguo_search_top_back"/>
    <Button
        android:id="@+id/search_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_search_edit_h"
        android:background="@drawable/edit_search_bg"
        android:layout_marginLeft="@dimen/search_top_back_marginLeft"
        android:layout_gravity="center_vertical"
        android:textColor="@color/red"
        android:text="@string/search_type"
        android:textSize="14sp"
        />
    <EditText
        android:id="@+id/main_search_edit"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="@dimen/main_search_edit_h"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/search_top_back_marginLeft"
        android:layout_marginTop="@dimen/search_top_back_marginLeft"
        android:layout_marginBottom="@dimen/search_top_back_marginLeft"
        android:background="@drawable/edit_search_bg"
        android:drawableLeft="@drawable/search"
        android:paddingLeft="@dimen/search_top_back_marginLeft"
        android:ems="10"
        android:hint="输入关键字"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/winguo_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/search_right_tv_mr"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:layout_marginRight="@dimen/search_right_tv_mr"
        android:text="搜索"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/winguo_search_type_pop_bg"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/search_type_pop_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/search_type_pop_shop_mt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_type_pop_shop_tv"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/search_type_pop_item_mr"
            android:textColor="@color/red"
            android:text="@string/search_type_pop_shop"
            android:textSize="@dimen/search_type_pop_item_size"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_type_pop_h"
        android:layout_marginTop="@dimen/search_type_pop_shop_view_mt"
        android:background="@color/white1"/>

    <LinearLayout
        android:id="@+id/search_type_pop_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/search_type_pop_item_m"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_type_pop_local_tv"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/search_type_pop_item_mr"
            android:textColor="@color/wh"
            android:textSize="@dimen/search_type_pop_item_size"
            android:text="@string/search_type_pop_local" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_type_pop_h"
        android:background="@color/white1"/>

    <LinearLayout
        android:id="@+id/search_type_pop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/search_type_pop_item_m"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_type_pop_service_tv"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/search_type_pop_item_size"
            android:layout_marginRight="@dimen/search_type_pop_item_mr"
            android:textColor="@color/wh"
            android:text="@string/search_type_pop_service" />

    </LinearLayout>


</LinearLayout>
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0092e5">

        <RelativeLayout
            android:id="@+id/hybrid4_account_login_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:clickable="true">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/my_open_station_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/hybrid4_account_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hybrid4_account_login_back"
            android:text="@string/hybrid4_account_resetpwd_center"
            android:textColor="@android:color/white"
            android:textSize="18sp"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hybrid4_account_login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:orientation="vertical">

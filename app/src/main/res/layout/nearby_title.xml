<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:background="@color/wh"
              android:gravity="center_vertical"
              android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/nearby_title_lbs_rl"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="4"
        android:background="@drawable/nearby_title_bg"
    >
        <TextView
            android:id="@+id/nearby_title_lbs_tv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/lbs_icon"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="15"
            android:text="定位中..."
            android:textColor="#333333"
            android:textSize="13sp"
        />
    </RelativeLayout>
    <TextView
        android:id="@+id/nearby_title_search_tv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@drawable/nearby_title_bg"
        android:drawableLeft="@drawable/nearby_title_search_icon"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="搜索"
        android:textColor="#d9d9d9"
        android:textSize="13sp"
    />
</LinearLayout>
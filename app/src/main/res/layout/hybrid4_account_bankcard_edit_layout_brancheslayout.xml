<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="89dp"
    android:layout_marginTop="65dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="top|left"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/hybrid4_account_bankcard_edit_layout_brancheslayout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#2c2c2c"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:gravity="center_vertical|left" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c" />

    <ListView
        android:id="@+id/hybrid4_account_bankcard_edit_layout_brancheslayout_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="#00000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c3c3c3" />
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" ><!-- android:background="#ff9d9d9d" -->

            <TextView
                android:id="@+id/hybrid4_account_bankcard_edit_layout_brancheslayout_btn_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hybrid4_account_bankcard_back"
                android:background="@drawable/hybrid4_account_bankcard_edit_layout_brancheslayout_btn_bg"
                android:textColor="#5a5a5a"
                android:textSize="17sp" />
            <View 
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#c3c3c3"/>

            <TextView
                android:id="@+id/hybrid4_account_bankcard_edit_layout_brancheslayout_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hybrid4_account_bankcard_cancel"
                android:background="@drawable/hybrid4_account_bankcard_edit_layout_brancheslayout_btn_bg"
                android:textColor="#5a5a5a"
                android:textSize="17sp" />
        </LinearLayout>

</LinearLayout>
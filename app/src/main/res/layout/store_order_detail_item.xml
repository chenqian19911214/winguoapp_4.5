<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="vertical"
>
    <ImageView
        android:id="@+id/store_detail_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
    />
    <TextView
        android:id="@+id/store_detail_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/store_detail_iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="撒大家人没有下一次了撒大家人没有下一次了撒大家人没有下一次了"
        android:textColor="@color/black"
        android:textSize="@dimen/orders_text_size"
    />
    <TextView
        android:id="@+id/store_detail_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/store_detail_iv"
        android:text="@string/search_result_goods_price"
        android:textColor="@color/red"
        android:textSize="16sp"
    />
    <TextView
        android:id="@+id/store_detail_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:text="@string/store_order_goods_number"
        android:textColor="#d2d2d2"
        android:textSize="13sp"
    />
</RelativeLayout>
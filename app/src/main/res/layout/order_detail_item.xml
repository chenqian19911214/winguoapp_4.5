<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/order_goods_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
    >
        <LinearLayout
            android:id="@+id/order_goods_picture_ll"
            android:layout_width="@dimen/order_goods_picture_bg"
            android:layout_height="@dimen/order_goods_picture_bg"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/listview_item_picture_background"
        >
            <ImageView
                android:id="@+id/order_goods_picture_iv"
                android:layout_width="@dimen/order_goods_picture"
                android:layout_height="@dimen/order_goods_picture"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/order_goods_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/order_goods_picture_ll"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="蓝宝晶1号净水机蓝宝晶1号净水机蓝宝晶1号净水机蓝宝晶1号净水机"
            android:textColor="#202020"
            android:textSize="12sp"
        />
        <LinearLayout
            android:id="@+id/order_goods_standard_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/order_goods_picture_ll"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/order_goods_standard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="尺寸:"
                android:textSize="12sp"
            />
            <TextView
                android:id="@+id/order_goods_standard2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="64G"
                android:textSize="12sp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/order_goods_color_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/order_goods_standard_ll"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/order_goods_picture_ll"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/order_goods_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="颜色:"
                android:textSize="12sp"
            />
            <TextView
                android:id="@+id/order_goods_color2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="黑色"
                android:textSize="12sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/order_discount_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 299"
                android:textColor="#000000"
                android:textSize="13sp"
            />
            <TextView
                android:id="@+id/order_goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:text="200"
                android:textColor="#B4B4B4"
                android:textSize="11sp"
            />
            <TextView
                android:id="@+id/order_goods_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:text="x  1"
                android:textColor="#B4B4B4"
                android:textSize="11sp"
            />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
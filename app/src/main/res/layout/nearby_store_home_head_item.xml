<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wh"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/nearby_store_home_head_item_ic"
        android:layout_width="@dimen/nearby_store_home_head_item_ic_w"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/nearby_store_home_head_item_ic_w"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_top_ten"
        android:paddingTop="@dimen/padding_twenty"
        android:paddingBottom="@dimen/padding_twenty"
        android:paddingRight="@dimen/margin_top_ten">

        <TextView
            android:id="@+id/nearby_store_home_head_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="婚纱摄影v健康的发挥水电费考虑好三德科技发货独守"
            android:textColor="#333333"
            android:textSize="@dimen/nearby_store_home_head_item_title_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分："
                android:textColor="#6a6a6a"
                android:textSize="@dimen/item_grade_size" />

            <TextView
                android:id="@+id/nearby_store_home_head_item_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textColor="#6a6a6a"
                android:textSize="@dimen/item_grade_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/nearby_store_home_head_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nearby_store_home_head_item_type_mt"
            android:gravity="center"
            android:text="生活服务"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/item_grade_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nearby_store_home_head_item_price_mt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nearby_store_home_head_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="¥ 120/人"
                android:textSize="@dimen/shop_item_price_size"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/nearby_store_home_head_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/winguo_store_detail_location"
                android:drawablePadding="3dp"
                android:gravity="right"
                android:text="500m"
                android:textColor="#24a1fe"
                android:textSize="@dimen/item_grade_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
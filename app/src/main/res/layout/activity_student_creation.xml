<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.winguo.activity.Student_creation_Activity">

    <!--  android:src="@drawable/student_creation_background"-->
    <include
        android:id="@+id/student_include"
        layout="@layout/top_back_navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/student_include"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/studio_creation_image_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/student_creation_background"
                android:layout_alignParentTop="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="@dimen/about_my_label">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/student_creation_chekBox_id_mb"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/student_creation_chekBox_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="" />

                    <TextView
                        android:id="@+id/student_creation_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="阅读并同意创客协议" />
                </LinearLayout>

                <Button
                    android:id="@+id/student_include_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/kedianji" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

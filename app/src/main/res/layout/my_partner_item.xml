<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/my_partner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_partner_items_size"
            android:layout_marginLeft="@dimen/my_partner_items_m"
            android:layout_marginTop="@dimen/my_partner_items_m"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_partner_items_size"
            android:layout_marginTop="@dimen/my_partner_items_m"
            android:text="@string/my_partner"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/my_partner_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="@dimen/my_partner_items_size"
        android:layout_margin="@dimen/my_partner_items_m"
        android:text="@string/my_partner_income"/>


</FrameLayout>
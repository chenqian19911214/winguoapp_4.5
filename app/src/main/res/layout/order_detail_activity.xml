<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mine_background"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/detail_title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hybrid4_account_login_title_rl_h"
        android:background="@drawable/order_detail_title_bg"
    >
        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="@dimen/hybrid4_account_register_back2_w"
            android:layout_height="@dimen/hybrid4_account_register_back2_h"
            android:layout_marginLeft="@dimen/hybrid4_account_register_back2_ml"
            android:clickable="true">


            <ImageView
                android:layout_width="@dimen/hybrid4_account_login_back_iv_w"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/hybrid4_account_login_back_iv_ml"
                android:layout_marginTop="@dimen/hybrid4_account_login_back_iv_mt"
                android:src="@drawable/winguo_app_login_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/hybrid4_account_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/order_detail_title"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <ImageView
                    android:id="@+id/order_detail_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/wait_pay"
                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:orientation="vertical"
                >
                    <TextView
                        android:id="@+id/order_detail_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                    />
                    <TextView
                        android:id="@+id/order_detail_status_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                    />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
            >
                <RelativeLayout
                    android:id="@+id/order_detail_deliverinfo_rl"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="15dp"
                >
                    <ImageView
                        android:id="@+id/temp_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/order_deliverinfo"
                    />
                    <TextView
                        android:id="@+id/order_detail_deliverinfo_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/temp_iv"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="#656565"
                        android:textSize="14sp"
                    />
                    <TextView
                        android:id="@+id/order_deliver__time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/temp_iv"
                        android:textColor="#b3b3b3"
                        android:textSize="12sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mine_background"
                />
                <RelativeLayout
                    android:id="@+id/order_detail_address_rl"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginLeft="15dp"
                >
                    <ImageView
                        android:id="@+id/temp_iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/order_address"
                    />
                    <TextView
                        android:id="@+id/detail_receiver_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/temp_iv1"
                        android:text="@string/order_detail_receiver"
                        android:textColor="#656565"
                        android:textSize="15sp"
                    />
                    <!--手机号码-->
                    <!--<TextView
                             android:id="@+id/detail_receiver_phone_tv"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentRight="true"
                             android:layout_marginRight="10dp"
                             android:layout_marginTop="10dp"
                             android:text="18402010281"
                             android:textColor="#b3b3b3"
                             android:textSize="12sp"
                         />-->
                    <TextView
                        android:id="@+id/detail_receiver_address_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_receiver_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/temp_iv1"
                        android:text="@string/order_detail_address"
                        android:textColor="#656565"
                        android:textSize="13sp"
                    />
                    <TextView
                        android:id="@+id/detail_receiver_address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_receiver_tv"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/detail_receiver_address_tv1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="#656565"
                        android:textSize="13sp"
                    />
                </RelativeLayout>
            </LinearLayout>
            <!--店铺标题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
            >
                <!--  <ImageView
                      android:id="@+id/temp_iv2"
                      android:layout_width="15dp"
                      android:layout_height="15dp"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:background="@drawable/shopicon"
                  />-->
                <TextView
                    android:id="@+id/order_shop_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="喵之小屋"
                    android:textColor="#202020"
                    android:textSize="14sp"
                />
                <!--  <ImageView
                      android:id="@+id/temp_iv3"
                      android:layout_width="15dp"
                      android:layout_height="15dp"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:layout_toRightOf="@id/order_shop_name_tv"
                      android:background="@mipmap/order_detail_icon"
                  />-->
            </RelativeLayout>
            <com.winguo.mine.order.detail.OrderDetailItemView
                android:id="@+id/order_detail_order_detail_item_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/order_detail_delivery_charges"
                        android:textColor="#d3d3d3"
                        android:textSize="10sp"
                    />
                    <TextView
                        android:id="@+id/order_detail_delivery_charges_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="¥ 299"
                        android:textSize="10sp"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/order_detail_shop_privilege"
                        android:textColor="#d3d3d3"
                        android:textSize="10sp"
                    />
                    <TextView
                        android:id="@+id/order_detail_shop_privilege_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="¥ 20"
                        android:textSize="10sp"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/order_detail_all_price"
                        android:textColor="#000000"
                        android:textSize="13sp"
                    />
                    <TextView
                        android:id="@+id/order_detail_all_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="¥ 299.00"
                        android:textColor="#000000"
                        android:textSize="13sp"
                    />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mine_background"
                />
                <TextView
                    android:id="@+id/order_detail_contact_seller_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/contact_seller"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/order_detail_contact_seller"
                    android:textColor="#000000"
                    android:textSize="14sp"
                />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/mine_background"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/order_detail_order_number_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/order_detail_order_number_tv"
                />
                <TextView
                    android:id="@+id/order_detail_setup_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/order_detail_setup_time"

                />
                <TextView
                    android:id="@+id/order_detail_pay_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/order_detail_pay_time"
                    android:visibility="gone"
                />
                <TextView
                    android:id="@+id/order_detail_deliver_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/order_detail_deliver_time"
                    android:visibility="gone"
                />
                <TextView
                    android:id="@+id/order_detail_receive_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/order_detail_receive_time"
                    android:visibility="gone"
                />
                <TextView
                    android:id="@+id/order_detail_evaluate_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/order_detail_evaluate_time"
                    android:visibility="gone"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--  <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
      >
          <Button
              android:id="@+id/order_detail_right"
              android:layout_width="70dp"
              android:layout_height="24dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="15dp"
              android:background="@drawable/order_detail_btn_selector"
              android:text="查看物流"
              android:textSize="15sp"
          />
          <Button
              android:id="@+id/order_detail_left"
              android:layout_width="70dp"
              android:layout_height="24dp"
              android:layout_centerVertical="true"
              android:layout_marginRight="15dp"
              android:layout_toLeftOf="@id/order_detail_right"
              android:background="@drawable/order_detail_btn_selector"
              android:text="查看物流"
              android:textSize="15sp"
          />
      </RelativeLayout>-->
</LinearLayout>
    <TextView
        android:id="@+id/temp_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hybrid4_account_login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:textSize="16sp"
        android:text="@string/winguo_account_tv_tip"/>

    <LinearLayout
        android:id="@+id/winguo_account_reset_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_iv"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/winguo_account_reset_phone_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/phone2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_register_prompt_name"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp" />
            <!-- <ImageView
                 android:id="@+id/register_isphone_iv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="10dp"
                 android:src="@drawable/error2"
                 android:visibility="gone"
             />-->
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2" />

        <TextView
            android:id="@+id/winguo_app_acoount_reset_tip"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/winguo_app_acoount_reset_tip_h"
            android:layout_marginLeft="@dimen/winguo_app_phone_tip_ml"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/hybrid4_account_reset_captcha_et"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableLeft="@drawable/verify_code2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_input_captcha"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/divide_small_line2" />

            <Button
                android:id="@+id/hybrid4_account_send_captcha_btn"
                android:layout_width="0.0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:background="@null"
                android:text="@string/hybrid4_account_send_captcha2"
                android:textColor="#404040"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/winguo_app_acoount_reset_tip_h"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/winguo_account_reset_pwd_et"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/pwd2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_prompt_newpassword"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/winguo_account_reset_pwd_et_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/error2"
                android:visibility="gone"/>

            <ToggleButton
                android:id="@+id/winguo_account_reset_pwd_et_showpwd_cb2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/toggle_btn"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/winguo_app_acoount_reset_tip_h"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/winguo_account_reset_pwd_et1"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/pwd2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_prompt_newpassword1"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/winguo_reset_pwd_et1_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/error2"
                android:visibility="gone"/>

            <ToggleButton
                android:id="@+id/winguo_reset_pwd_et1_showpwd_cb2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/toggle_btn"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2" />

    </LinearLayout>


    <Button
        android:id="@+id/winguo_account_modify_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/winguo_account_reset_container"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/pay_success_blue_solid_btn"
        android:text="@string/winguo_account_resetpwd"
        android:textColor="@android:color/white" />


</RelativeLayout>


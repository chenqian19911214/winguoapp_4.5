<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bank_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_bank_card_item_blue_bg">


    <ImageView
        android:id="@+id/my_bank_card_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bank_icon_bg"
        android:layout_marginLeft="@dimen/my_bank_card_type_icon_ml"
        android:layout_marginTop="@dimen/my_bank_card_type_icon_ml"
        android:layout_toLeftOf="@id/mywallet_balance_ll"
        android:src="@drawable/hybrid4_account_bank_icon_1" />

    <LinearLayout
        android:id="@+id/my_bank_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mywallet_center_balance_tip_ml"
        android:layout_marginTop="@dimen/mywallet_center_balance_tip_mt"
        android:layout_toRightOf="@id/my_bank_card_type_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_bank_card_banktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/title_tt_color"
            android:text="@string/my_bank_card_type" />
        <TextView
            android:id="@+id/my_bank_card_cardtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/my_bank_card"
            android:text="储蓄卡"
            android:textSize="12sp"
            android:textColor="@color/title_tt_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_bank_card"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_tt_color"
                android:text="**** **** ***** "
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/my_bank_card_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="-5dp"
                android:layout_gravity="center"
                android:textColor="@color/title_tt_color"
                android:text="@string/my_bank_card_code" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
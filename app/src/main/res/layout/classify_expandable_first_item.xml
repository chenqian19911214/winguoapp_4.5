<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#FFFFFF"
>
    <ImageView
        android:id="@+id/classify_first_icon_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
    />
    <!-- android:background="@drawable/listview_item_picture_background"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/classify_first_icon_iv"
        android:orientation="vertical"
    >
        <TextView
            android:id="@+id/classify_first_big_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="服装服饰"
            android:textColor="#000000"
            android:textSize="19sp"
        />
        <TextView
            android:id="@+id/classify_first_small_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="女装/男装/高跟鞋/帽子/皮鞋..."
            android:textColor="#b3b3b3"
            android:layout_marginBottom="14dp"
            android:textSize="13sp"
        />
    </LinearLayout>
    <ImageView
        android:id="@+id/classify_first_arrows_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/classify_arrows_right"
    />
</RelativeLayout>
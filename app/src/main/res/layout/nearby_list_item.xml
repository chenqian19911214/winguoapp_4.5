<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:background="@color/wh">

        <ImageView
            android:id="@+id/shop_icon_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/shop_icon_iv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="天河正佳广场蓝天影院"
            android:textColor="#333333"
            android:textSize="15sp" />

        <!--<TextView-->
            <!--android:id="@+id/shop_address_tv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/shop_name_tv"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_toRightOf="@id/shop_icon_iv"-->
            <!--android:ellipsize="end"-->
            <!--android:maxLines="2"-->
            <!--android:text="广东省天河区体育东路羊城国际贸易西塔13楼13号问果科技公司技术部"-->
            <!--android:textColor="#d9d9d9"-->
            <!--android:textSize="13sp"-->
            <!--android:visibility="visible"/>-->

        <TextView
            android:id="@+id/shop_per_consumption_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/shop_icon_iv"
            android:text="@string/shop_per_consumption"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/shop_type_tradename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/shop_per_consumption_tv"
            android:layout_marginBottom="@dimen/margin_top_ten"
            android:layout_toRightOf="@id/shop_icon_iv"
            android:text="类型"
            android:textColor="#d9d9d9"
            android:textSize="13sp"
            />


        <TextView
            android:id="@+id/shop_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@drawable/shop_address"
            android:drawablePadding="5dp"
            android:text="@string/shop_distance"
            android:textColor="#24a1fe" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#d9d9d9" />
</LinearLayout>
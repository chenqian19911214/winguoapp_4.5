<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wh"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_page_snack_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_page_snack_shop_h"
        android:scaleType="fitXY"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/ic_launcher"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_page_snack_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white1"/>
    <ImageView
        android:id="@+id/home_page_beauty_shop"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/home_page_snack_shop_h"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/ic_launcher"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_page_beauty_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white1"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <!--顶部栏-->
    <RelativeLayout
        android:id="@+id/winguo_login_top_view"
        style="@style/top_property"
        android:background="@color/wh">

        <RelativeLayout
            android:id="@+id/set_phone_tel_back"
            android:layout_width="@dimen/hybrid4_account_login_back_w"
            android:layout_height="@dimen/hybrid4_account_login_back_h"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/hybrid4_account_login_back_ml"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/hybrid4_account_login_back_iv_w"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/hybrid4_account_login_back_iv_ml"
                android:layout_marginTop="@dimen/hybrid4_account_login_back_iv_mt"
                android:src="@drawable/winguo_app_login_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/set_phone_tel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="绑定手机号"
            android:textColor="#404040"
            android:textSize="20sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"/>


    <FrameLayout
        android:id="@+id/set_phone_tel_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_pw_ll_ml"
                android:layout_marginRight="@dimen/login_pw_ll_ml">

                <LinearLayout
                    android:id="@+id/modify_bind_phone_second_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="中国+86" />

                    <EditText
                        android:id="@+id/modify_bind_phone_second_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="输入手机号"
                        android:padding="20dp"
                        android:inputType="number"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:theme="@style/MyEditText" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/modify_bind_phone_second_ll"
                    android:background="@color/white1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_pw_ll_ml"
                android:layout_marginRight="@dimen/login_pw_ll_ml">

                <LinearLayout
                    android:id="@+id/modify_loginpwd_by"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/modify_bind_phone_second_code"
                        android:layout_width="0.0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@null"
                        android:drawablePadding="13dp"
                        android:hint="@string/hybrid4_account_input_captcha"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/divide_small_line2" />

                    <Button
                        android:id="@+id/modify_bind_phone_send_captcha_btn"
                        android:layout_width="0.0dp"
                        android:layout_height="35dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:text="@string/hybrid4_account_send_captcha2"
                        android:textColor="#404040"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@id/modify_loginpwd_by"
                    android:background="@color/white1" />

            </RelativeLayout>

            <Button
                android:id="@+id/modify_bind_phone_second_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/winguo_account_modify_pay_bt_h"
                android:layout_marginBottom="@dimen/winguo_account_modify_pay_bt_mt"
                android:layout_marginLeft="@dimen/login_pw_ll_ml"
                android:layout_marginRight="@dimen/login_pw_ll_ml"
                android:layout_marginTop="@dimen/winguo_account_modify_pay_bt_mt"
                android:background="@drawable/pay_success_blue_solid_btn"
                android:text="完 成"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
>
    <ImageView
        android:id="@+id/store_order_goods_logo_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"
    />
    <TextView
        android:id="@+id/store_order_goods_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/store_order_goods_logo_iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="手机的两三个手机的两三个手机的两三个手机的两三个手机的两三个"
        android:textColor="@color/store_order_text"
        android:textSize="13sp"
    />
    <TextView
        android:id="@+id/store_order_goods_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/store_order_goods_logo_iv"
        android:text="@string/cart_goods_price"
        android:textColor="#ff0000"
        android:textSize="13sp"
    />
    <TextView
        android:id="@+id/store_order_goods_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/store_order_goods_number"
        android:textColor="@color/store_order_text"
        android:textSize="13sp"
    />
</RelativeLayout>
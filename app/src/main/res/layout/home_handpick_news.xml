<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_news_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/handpick_news"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/home_news_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="right|center_vertical"
            android:text="更多"
            />
        <ImageView
            android:id="@+id/winguo_home_news_refresh"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/winguo_home_news_more_icon"
            android:visibility="visible"/>
    </FrameLayout>

    <ImageView style="@style/horizontal_divider" />

    <com.winguo.view.IListView
        android:id="@+id/home_news_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="3dp"
        android:listSelector="@android:color/transparent">
    </com.winguo.view.IListView>

</LinearLayout>

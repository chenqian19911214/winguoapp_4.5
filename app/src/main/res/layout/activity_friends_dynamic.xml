<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hybrid4_account_login_title_rl_h">

        <RelativeLayout
            android:id="@+id/back2"
            android:layout_width="@dimen/hybrid4_account_register_back2_w"
            android:layout_height="@dimen/hybrid4_account_register_back2_h"
            android:layout_marginLeft="@dimen/hybrid4_account_register_back2_ml"
            android:clickable="true">


            <ImageView
                android:layout_width="@dimen/hybrid4_account_login_back_iv_w"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/hybrid4_account_login_back_iv_ml"
                android:layout_marginTop="@dimen/hybrid4_account_login_back_iv_mt"
                android:src="@drawable/winguo_app_login_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/hybrid4_account_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/friend_dynamic_title"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/winguo_home_news_more_icon"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F5F5F5"
        android:padding="@dimen/home_drawable_top"
        android:visibility="gone"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
        >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/classify_search_icon"
            />
            <TextView
                android:id="@+id/classify_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/classify_search_tv"
                android:textColorHint="#b3b3b3"
                android:textSize="13sp"
            />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/friend_dynamic_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/wh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_item_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="婚纱摄影v健康的发挥水电费考虑好三德科技发货独守"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/shop_item_spec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="规格"
                android:gravity="center_vertical"
                android:textSize="16sp" />

        </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/shop_item_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/winguo_nearby_home_item_add" />

                <TextView
                    android:id="@+id/shop_item_number"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@id/shop_item_add"
                    android:gravity="center"
                    android:text="@string/shop_add_number"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/shop_item_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/shop_item_number"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:src="@drawable/winguo_nearby_home_item_del"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/shop_item_del">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ "
                        android:textColor="@color/red" />
                    <TextView
                        android:id="@+id/shop_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/shop_item_del"
                        android:text="120"
                        android:textColor="@color/red" />
                </LinearLayout>


            </RelativeLayout>




    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/search_result_goods_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/search_result_goods_number_tv"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/search_result_goods_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/search_result_goods_iv"
        android:background="@drawable/search_result_goods_bg"
        android:gravity="center"
        android:padding="4dp"
        android:text="实体店"
        android:textColor="@color/nearby_blue"
        android:textSize="11sp"
    />
    <TextView
        android:id="@+id/search_result_goods_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/search_result_goods_tag"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#404040"
        android:textSize="13sp"
    />
    <TextView
        android:id="@+id/search_result_goods_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_result_goods_number"
        android:textColor="#cccccc"

        android:layout_alignBaseline="@+id/search_result_goods_distance_tv"
        android:layout_alignBottom="@+id/search_result_goods_distance_tv"
        android:layout_alignLeft="@+id/search_result_goods_price_tv"
        android:layout_alignStart="@+id/search_result_goods_price_tv"/>
    <TextView
        android:id="@+id/search_result_goods_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/search_result_goods_number_tv"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/search_result_goods_iv"
        android:text="@string/search_result_goods_price"
        android:textColor="#e62e2e"
    />
    <TextView
        android:id="@+id/search_result_goods_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/search_result_goods_distance"
        android:drawablePadding="5dp"
        android:text="@string/search_result_goods_distance"
        android:textColor="@color/nearby_blue"
        android:textSize="12sp"
    />
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="#d9d9d9" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--<include layout="@layout/top_back_navi" />-->

    <FrameLayout
        android:id="@+id/my_partner_myqr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wh"
        android:orientation="horizontal"
        android:padding="@dimen/user_head_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/user_nickname_fl_ml"
            android:text="@string/my_qr_tip"
            android:textSize="@dimen/person_item_textsize" />

        <ImageView
            android:id="@+id/my_partner_myqr_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/user_nickname_fl_mr"
            android:src="@drawable/mine_qr_code_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_parting_line"
            android:layout_gravity="bottom"
            android:background="@color/white1" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/my_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wh"
        android:orientation="horizontal"
        android:padding="@dimen/user_head_padding"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/user_nickname_fl_ml"
            android:text="@string/my_partner_tip"
            android:textSize="@dimen/person_item_textsize" />

        <TextView
            android:id="@+id/my_partner_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/user_nickname_fl_mr"
            android:drawablePadding="@dimen/my_partner_right_drap"
            android:drawableRight="@drawable/classify_arrows_right"
            android:text="@string/my_partner_right_tip"
            android:textColor="@color/textColor"
            android:textSize="@dimen/my_partner_right_tsize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_parting_line"
            android:layout_gravity="bottom"
            android:background="@color/white1" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/my_partner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wh"
        android:orientation="horizontal"
        android:padding="@dimen/user_head_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/user_nickname_fl_ml"
            android:text="@string/my_partner_name_tip"
            android:textSize="@dimen/person_item_textsize" />

        <TextView
            android:id="@+id/my_partner_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/user_nickname_fl_mr"
            android:textColor="@color/textColor"
            android:textSize="@dimen/my_partner_right_tsize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_parting_line"
            android:layout_gravity="bottom"
            android:background="@color/white1" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_partner_income_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/my_partner_income_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my_partner_income_tip_m" />


</LinearLayout>
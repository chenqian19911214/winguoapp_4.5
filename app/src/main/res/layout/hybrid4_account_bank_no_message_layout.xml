<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe0e0e0"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/hybrid4_settings_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        layout="@layout/hybrid4_account_head_layout" />

    <Button
        android:id="@+id/hybrid4_account_bank_card_add"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/hybrid4_account_button_drawable"
        android:text="@string/hybrid4_account_add_bank_card"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/hybrid4_account_bank_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/hybrid4_account_bank_help_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/hybrid4_account_bank_hint_1" />

            <TextView
                android:id="@+id/hybrid4_account_bankcard_help_hint_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hybrid4_account_bankcard_help_msg_hint_1"
                android:textColor="#6b6b6b"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/hybrid4_account_bank_hint_2" />

            <TextView
                android:id="@+id/hybrid4_account_bankcard_help_hint_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hybrid4_account_bankcard_help_msg_hint_2"
                android:textColor="#6b6b6b"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp" >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/hybrid4_account_bank_hint_3" />

                <TextView
                    android:id="@+id/hybrid4_account_bankcard_help_hint_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hybrid4_account_bankcard_help_msg_hint_3"
                    android:textColor="#6b6b6b"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/hybrid4_account_bankcard_help"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:paddingRight="7dp"
                    android:src="@drawable/hybrid4_account_help_drawable" />
            </LinearLayout>

            <LinearLayout 
                android:id="@+id/hybrid4_account_bankcard_help_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:visibility="gone" 
                android:orientation="vertical">
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView 
                        android:id="@+id/hybrid4_account_bankcard_help_desc1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hybrid4_account_bankcard_help_msg_hint_3_desc1_title"
                        android:gravity="top"
                		android:textColor="#c0c0c0"
                		android:textSize="13sp"/>
                    
                    <TextView 
                        android:id="@+id/hybrid4_account_bankcard_help_desc1_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hybrid4_account_bankcard_help_msg_hint_3_desc1_msg"
                        android:gravity="top"
                		android:textColor="#c0c0c0"
                		android:textSize="13sp"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView 
                        android:id="@+id/hybrid4_account_bankcard_help_desc2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hybrid4_account_bankcard_help_msg_hint_3_desc2_title"
                        android:gravity="top"
                		android:textColor="#c0c0c0"
                		android:textSize="13sp"/>
                    
                    <TextView 
                        android:id="@+id/hybrid4_account_bankcard_help_desc2_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hybrid4_account_bankcard_help_msg_hint_3_desc2_msg"
                        android:gravity="top"
                		android:textColor="#c0c0c0"
                		android:textSize="13sp"/>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <TextView 
                        android:id="@+id/hybrid4_account_bankcard_help_desc3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hybrid4_account_bankcard_help_msg_hint_3_desc3_title"
                        android:gravity="top"
                		android:textColor="#c0c0c0"
                		android:textSize="13sp"/>
                    
                    <TextView
                        android:id="@+id/hybrid4_account_bankcard_help_desc3_msg" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hybrid4_account_bankcard_help_msg_hint_3_desc3_msg"
                        android:gravity="top"
                		android:textColor="#c0c0c0"
                		android:textSize="13sp"/>
                    
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/hybrid4_account_bank_list_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/hybrid4_account_bank_grid_background"
        android:gravity="center"
        >
        
        <GridView
            android:id="@+id/hybrid4_account_bank_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:layout_margin="5dp"
            android:numColumns="3" />
    </LinearLayout>

</LinearLayout>
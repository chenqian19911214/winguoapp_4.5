<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:background="@android:color/white"
    android:padding="10dp"
    >
    
       <TextView android:id="@+id/voicefun_msg_item_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:textColor="@android:color/black"
	        android:singleLine="true"
	        android:textSize="18sp"
	        />
    	
       <TextView android:id="@+id/voicefun_msg_item_num"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/voicefun_msg_item_name"
           android:textColor="#a0a0a0"
           />
       
       <TextView android:id="@+id/voicefun_msg_item_addr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/voicefun_msg_item_num"
           android:textColor="#a0a0a0"
           />
       
       <Button android:id="@+id/voicefun_msg_item_del"
           android:layout_width="65dp"
           android:layout_height="35dp"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:text="删除"
           android:textSize="14sp"
           android:layout_marginRight="15dp"
           android:background="@drawable/voicefun_del_button_drawable"
           />
       
     	<TextView android:id="@+id/voicefun_msg_item_status"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:layout_centerVertical="true"
     	    android:layout_alignParentRight="true"
     	    android:layout_marginRight="15dp"
     	    android:visibility="gone"
     	    android:textColor="#a0a0a0"
     	    />
       

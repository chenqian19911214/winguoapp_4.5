<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"

              android:layout_height="match_parent"
              android:background="@color/mine_background"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/hybrid4_account_login_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
    >
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:clickable="true">


            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/hybrid4_account_login_back_iv_w"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/hybrid4_account_login_back_iv_ml"
                android:layout_marginTop="@dimen/hybrid4_account_login_back_iv_mt"
                android:src="@drawable/winguo_app_login_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/hybrid4_account_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/address_add_title"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/title"
        />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
    >
        <EditText
            android:id="@+id/address_receiver_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/address_receiver"
            android:textColorHint="#b3b3b3"
            android:textSize="13sp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_background"
        />
        <EditText
            android:id="@+id/address_phone_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/address_phone"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="#b3b3b3"
            android:textSize="13sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_background"
        />
        <EditText
            android:id="@+id/address_postalcode_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:maxLength="6"
            android:inputType="number"
            android:background="@null"
            android:hint="@string/address_postalcode"
            android:textColorHint="#b3b3b3"
            android:textSize="13sp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_background"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
        >
            <TextView
                android:id="@+id/address_location_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="@string/address_location"
                android:textColor="#000000"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/classify_arrows_right"
            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_background"
        />
        <EditText
            android:id="@+id/address_detail_et"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="left"
            android:hint="@string/address_detail"
            android:paddingTop="10dp"
            android:textColorHint="#b3b3b3"
            android:textSize="13sp"
        />
    </LinearLayout>
    <Button
        android:id="@+id/address_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/delect_btn"
        android:text="@string/address_confirm"
        android:textColor="#ffffff"
    />
</LinearLayout>
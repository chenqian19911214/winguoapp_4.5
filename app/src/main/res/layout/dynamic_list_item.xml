<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/dynamic_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/dynamic_icon_iv"
    >
        <TextView
            android:id="@+id/dynamic_name_tv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#404040"
            android:textSize="15sp"
        />
        <TextView
            android:id="@+id/dynamic_account_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#9b9696"
            android:textSize="13sp"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/dynamic_icon_iv"
    >
        <TextView
            android:id="@+id/dynamic_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-04-10 11:23:51"
            android:textColor="#404040"
            android:textSize="12sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="成功入驻空间站"
            android:textColor="#404040"
            android:textSize="12sp"
        />
    </RelativeLayout>
</RelativeLayout>
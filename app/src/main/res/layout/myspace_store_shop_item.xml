<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/wh">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_item_ic_ll_h"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_item_ic"
            android:layout_width="@dimen/shop_item_ic_h"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_top_ten"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_item_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="婚纱摄影v健康的发挥水电费考虑好三德科技发货独守"
                android:textColor="#333333"
                android:textSize="@dimen/shop_item_title_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/shop_item_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/winguo_nearby_home_item_add" />

                <TextView
                    android:id="@+id/shop_item_number"
                    android:layout_width="@dimen/shop_item_number_w"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/shop_item_add"
                    android:gravity="center_horizontal"
                    android:text="@string/shop_add_number"
                    android:textColor="#333333"
                    android:textSize="@dimen/shop_item_number_size"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/shop_item_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/shop_item_number"
                    android:gravity="center_vertical"
                    android:src="@drawable/winguo_nearby_home_item_del"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/shop_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 120"
                android:textColor="#ff0000"
                android:textSize="@dimen/shop_item_price_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
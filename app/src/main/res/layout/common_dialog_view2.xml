<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog2_title_hight"
        android:paddingLeft="@dimen/dialog2_title_padding"
        android:paddingRight="@dimen/dialog2_title_padding"
        android:gravity="center"
        android:text=""
        android:textColor="@color/dialog2_title_text_color"
        android:textSize="@dimen/dialog2_title_text_size"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight1"
        android:background="@color/title_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/dialog_btn1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dialog2_button_hight"
            android:text="取消"
            android:textColor="@color/dialog2_title_text_color"
            android:background="@color/transparent"
            android:textSize="@dimen/dialog_text_size"
           />
        <ImageView
            android:layout_width="@dimen/line_hight1"
            android:layout_height="@dimen/dialog2_button_hight"
            android:src="@drawable/nearby_store_home_title_left_ic"
            android:scaleType="fitXY"
            />
        <Button
            android:id="@+id/dialog_btn2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dialog2_button_hight"
            android:text="确定"
            android:background="@color/transparent"
            android:textColor="@color/dialog2_title_text_color"
            android:textSize="@dimen/dialog_text_size"
            />

    </LinearLayout>






</LinearLayout>
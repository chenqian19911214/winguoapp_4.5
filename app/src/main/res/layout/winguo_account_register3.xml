<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wh"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/hybrid4_account_login_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register3_title"
    >

        <RelativeLayout
            android:id="@+id/hybrid4_account_register_back3"
            android:layout_width="@dimen/register3_title_back"
            android:layout_height="@dimen/register3_title_back"
            android:layout_marginLeft="@dimen/register3_back_left"
            android:clickable="true">


            <ImageView
                android:layout_width="@dimen/hybrid4_account_login_back_iv_w"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/hybrid4_account_login_back_iv_ml"
                android:layout_marginTop="@dimen/hybrid4_account_login_back_iv_mt"
                android:src="@drawable/winguo_app_login_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/hybrid4_account_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/hybrid4_account_register"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/register3_title_size"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/temp_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hybrid4_account_login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/register3_logo_top"
        android:src="@drawable/winguo_app_login_top_logo"
    />
    <LinearLayout
        android:id="@+id/hybrid4_account_register_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_iv"
        android:layout_marginLeft="@dimen/register3_content_margin"
        android:layout_marginRight="@dimen/register3_content_margin"
        android:layout_marginTop="@dimen/register3_content_top"
        android:background="@android:color/white"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/register3_phone"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
        >
            <EditText
                android:id="@+id/hybrid4_account_login_user_et3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/phone2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_register_prompt_name"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"
            />
            <!-- <ImageView
                 android:id="@+id/register_isphone_iv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="10dp"
                 android:src="@drawable/error2"
                 android:visibility="gone"
             />-->
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
        >
            <EditText
                android:id="@+id/winguo_account_register_idCode_et3"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:drawableLeft="@drawable/verify_code2"
                android:drawablePadding="13dp"
                android:hint="@string/hybrid4_account_input_captcha"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="14sp"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/divide_small_line2"
            />
            <Button
                android:id="@+id/send_idCode_request_button3"
                android:layout_width="0.0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/hybrid4_account_send_captcha2"
                android:textColor="#404040"
                android:textSize="14sp"
            />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/divide_line2"
        />


    </LinearLayout>
    <Button
        android:id="@+id/hybrid4_account_register_btn3"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/hybrid4_account_register_container"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/pay_success_blue_solid_btn"
        android:text="@string/hybrid4_account_register2"
        android:textColor="@android:color/white"
    />

</RelativeLayout>

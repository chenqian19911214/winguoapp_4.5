<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_order_all_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全   部"
            android:textColor="@color/viewpager_default"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/store_order_wait_pay_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/viewpager_default"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/store_order_wait_stock_up_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待备货"
            android:textColor="@color/viewpager_default"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/store_order_wait_pick_up_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待自提"
            android:textColor="@color/viewpager_default"
            android:textSize="15sp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/store_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
</LinearLayout>
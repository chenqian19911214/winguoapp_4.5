<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/wh"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/wallet_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/left_back_btn" />

        <TextView
            android:id="@+id/recharge_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="钱包充值"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recharge_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/recharge_iv_mt"
            android:src="@drawable/pay_success" />

        <TextView
            android:id="@+id/recharge_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recharge_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/recharge_state_tv_mt"
            android:text="@string/recharge_state_tv_tip"
            android:textSize="18sp"
            android:textColor="#333333" />
    </RelativeLayout>

    <Button
        android:id="@+id/recharge_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color"
        android:text="立即购物"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/recharge_btn_mt"
        android:layout_marginLeft="@dimen/recharge_btn_m"
        android:layout_marginRight="@dimen/recharge_btn_m"
        android:gravity="center"
        android:textColor="#fffefe" />
    <Button
        android:id="@+id/recharge_btn_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_success_blue_btn"
        android:layout_marginTop="@dimen/recharge_btn_wallet_mt"
        android:layout_marginLeft="@dimen/recharge_btn_m"
        android:layout_marginRight="@dimen/recharge_btn_m"
        android:text="我的钱包"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/title_color"
        android:visibility="gone"/>

</LinearLayout>
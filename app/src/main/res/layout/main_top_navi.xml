<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wh">

    <FrameLayout
        android:id="@+id/main_account_click"
        android:layout_width="@dimen/home_more_click_w"
        android:layout_height="@dimen/home_more_click_w"
        android:layout_marginLeft="@dimen/main_account_ml"
        android:visibility="visible">

        <com.winguo.view.CircleImageView
            android:id="@+id/main_account"
            android:layout_width="@dimen/main_account_w"
            android:layout_height="@dimen/main_account_w"
            android:layout_gravity="center"
            android:src="@drawable/winguo_home_top_head" />
    </FrameLayout>

    <TextView
        android:id="@+id/home_user_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/product_title_text_color"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/home_search_click"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/home_search_click_mr">

        <ImageView
            android:id="@+id/search_edit"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/winguo_home_top_search"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/home_more_click"
        android:layout_width="@dimen/home_more_click_w"
        android:layout_height="@dimen/home_more_click_w"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/main_add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/winguo_home_top_more_ic" />
    </FrameLayout>


</FrameLayout>